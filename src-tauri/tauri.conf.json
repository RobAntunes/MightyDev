{
  "$schema": "https://raw.githubusercontent.com/tauri-apps/tauri/dev/tooling/cli/schema.json",
  "productName": "Mighty IDE",
  "version": "0.1.0",
  "identifier": "com.mighty.ide",
  "build": {
    "frontendDist": "../src",
    "devUrl": "http://localhost:1420",
    "beforeDevCommand": "deno task dev",
    "beforeBuildCommand": "deno task build"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "Mighty IDE",
        "width": 1200,
        "height": 800,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  }
}